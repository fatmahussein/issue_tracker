<%= form_with(model: [@project, issue]) do |form| %>
  <% if issue.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(issue.errors.count, "error") %> prohibited this issue from being saved:</h2>

      <ul>
        <% issue.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :status %><br>
    <%= form.select :status, Issue::STATUSES %>
  </div>

  <div>
    <%= form.label :priority %><br>
    <%= form.number_field :priority, in: 1..5 %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
